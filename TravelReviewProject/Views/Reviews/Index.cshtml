@model IEnumerable<TravelReviewProject.Models.Review>

@{
    ViewBag.Title = "Index";
}

<div class="reviewsMain">
    <div class="container">
        <h2>Reviews</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-5 col-sm-12 reviews">
                    <div class="col-md-4 col-sm-4 captionHeading">
                        <p class="fieldName">@Html.DisplayNameFor(model => model.RanchName): </p>
                        <p>@Html.DisplayFor(modelItem => item.RanchName)</p>
                        <p class="fieldName">@Html.DisplayNameFor(model => model.Location.State):</p>
                        <p>@Html.DisplayFor(modelItem => item.Location.State)</p>
                        <p class="fieldName">@Html.DisplayNameFor(model => model.Author):</p>
                        <p>@Html.DisplayFor(modelItem => item.Author)</p>
                    </div>
                    <div class="col-md-8 col-sm-8 captionContent">
                        <p class="fieldName">@Html.DisplayNameFor(model => model.Comment):</p>
                        <p>@Html.DisplayFor(modelItem => item.Comment)</p>
                        <p class="editBtn">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { role = "button", @class = "btn reviewsButton" })
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { role = "button", @class = "btn reviewsButton" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { role = "button", @class = "btn reviewsButton" })
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


